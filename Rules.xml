<?xml version="1.0" encoding="UTF-8" ?>
<configs>
	<append xpath="/windows">
		<window name="RulesWindow" depth="100" width="600" height="500" anchor="Center" pivot="Center" pos="0,0" disableautobackground="true">
			<panel depth="0" width="600" height="500" anchor="Center" pivot="Center">
				<sprite depth="0" name="background" type="sliced" color="20,18,18" width="600" height="500"/>
				<sprite depth="1" name="border" type="sliced" color="[black]" width="600" height="500"/>
				
				<label depth="10" pos="0,220" width="580" height="40" font_size="36" justify="center" color="[white]" effect="Outline8" effect_color="0,0,0,255" text="ПРАВИЛА СЕРВЕРА"/>
				
				<label depth="10" pos="0,150" width="550" height="350" font_size="24" justify="center" color="[white]" effect="Outline8" effect_color="0,0,0,255" text="1. Не использовать читы\n2. Уважать других игроков\n3. Не гриферить\n4. Соблюдать правила чата\n5. Слушаться администрацию"/>
				
				<button depth="20" name="btnClose" pos="0,-200" width="100" height="40" sprite="ui_game_symbol_close" pivot="center" tooltip="Закрыть" onclick="[Dismiss]"/>
			</panel>
		</window>
	</append>
</configs>